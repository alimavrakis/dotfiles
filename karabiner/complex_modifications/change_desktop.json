{
  "title": "Ctrl + Mouse Buttons to Change Desktops",
  "rules": [
    {
      "description": "Change desktops to the right with Ctrl + Mouse4",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Change desktops to the right with Ctrl + Mouse5",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_control"]
            }
          ]
        }
      ]
    }
  ]
}
